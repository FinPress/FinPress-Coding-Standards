{
	"name": "wp-coding-standards/WordPress",
	"type": "phpcodesniffer-standard",
	"description": "PHP_CodeSniffer rules (sniffs) to enforce WordPress coding conventions",
	"keywords": ["PHP_CodeSniffer", "phpcs", "standards", "WordPress"],
	"require": {
		"squizlabs/php_codesniffer": "1.5.*"
	},
	"support": {
		"issues": "https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/issues",
		"wiki": "https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/wiki",
		"source": "https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards.git"
	},
	"scripts": {
	  "post-install-cmd": "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/"
    }
}